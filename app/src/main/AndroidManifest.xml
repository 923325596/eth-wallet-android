<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.namadi.crimson">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.namadi.crimson.activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.namadi.crimson.activities.ScanToSendActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name="com.namadi.crimson.activities.ScanToWatchActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name="com.namadi.crimson.activities.pin.ConfirmPinActivity"
            android:theme="@style/AppTheme"
            android:noHistory="true"></activity>
        <activity
            android:name="com.namadi.crimson.activities.pin.SetPinActivity"
            android:theme="@style/AppTheme"
            android:noHistory="true"></activity>
        <activity
            android:name="com.namadi.crimson.activities.WalletActivity"
            android:label="@string/title_activity_wallet"
            android:screenOrientation="portrait"
            android:parentActivityName="com.namadi.crimson.activities.MainActivity"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>